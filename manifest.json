{
  "name": "CROC Jira plugin",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Add Jira date time select",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "CROC Jira plugin",
    "default_icon": "icon24.png",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ]
} 